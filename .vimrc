imap jj <esc>

set number

set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab
filetype indent on

set cursorline

set wildmenu

"set showmatch

set incsearch
set hlsearch

set foldlevelstart=10
set foldmethod=indent
set foldignore=

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
set splitbelow
set splitright

